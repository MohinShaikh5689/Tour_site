header.header 
    nav.nav.nav--tours
        a(href='/' class='nav__el') All tours
        a(href='#' class='nav__el') Popular
        a(href='#' class='nav__el') New tours
        if user 
            a(href='#' class='nav__el') My bookings
    .header__logo
        img(src = '/img/logo-white.png', alt = 'Natours logo')

    nav.nav.nav--user
        
       if user
        a.nav__el(href='/me')
            img.nav__user-img(src = `/img/users/${user.photo}`, alt = 'User photo')
            span= user.name.split(' ')[0]
        a.nav__el.nav__el--logout log out    
       else 
        a.nav__el(href= '/login') Log in 
        a.nav__el.nav__el--cta(href='/signup' ) Sign up   
